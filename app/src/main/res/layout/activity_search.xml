<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/Apap"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/black"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:id="@+id/re"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">


            <ToggleButton
                android:id="@+id/check_movie"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/check_paople"
                android:layout_marginEnd="89dp"
                android:background="@drawable/my_btn_toggle"
                android:paddingTop="5dp"
                android:textColor="@drawable/textcolor"
                android:textOff="movie"
                android:textOn="movie"
                android:textSize="15dp" />


            <ToggleButton
                android:id="@+id/check_tv"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/check_movie"
                android:layout_marginStart="138dp"
                android:background="@drawable/my_btn_toggle"
                android:paddingTop="5dp"
                android:textColor="@drawable/textcolor"
                android:textOff="tv"
                android:textOn="tv"
                android:textSize="15dp" />

            <ToggleButton
                android:id="@+id/check_paople"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="26dp"
                android:layout_marginEnd="-132dp"
                android:layout_toStartOf="@+id/check_tv"
                android:background="@drawable/my_btn_toggle"
                android:paddingTop="5dp"
                android:textColor="@drawable/textcolor"
                android:textOff="people"
                android:textOn="people"
                android:textSize="15dp" />


            <EditText
                android:id="@+id/search_edittext"
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="38dp"
                android:layout_marginTop="26dp"
                android:background="@drawable/shape_for_search_edittex"
                android:hint="  search"
                android:paddingLeft="15dp"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorGreyLight"
                android:textSize="20dp"
                tools:ignore="UnknownId" />

            <ImageButton

                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/search_edittext"
                android:layout_marginStart="-74dp"
                android:layout_toEndOf="@+id/check_movie"
                android:background="@color/black"
                android:src="@mipmap/search" />

        </RelativeLayout>


    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="624dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Apap">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/search_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>
</RelativeLayout>

