<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trailer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardBackgroundColor="@color/black">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape2">



            <ImageView
                android:id="@+id/back_image_trailer"

                android:layout_width="match_parent"
                android:layout_height="200dp" />


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/play"

                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
             />


            <ImageView
                android:id="@+id/image_trailer"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/shape"
                android:paddingEnd="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"

                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="116dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="24dp" />

            <TextView
                android:id="@+id/text_trailer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_toRightOf="@id/image_trailer"
                android:layout_below="@id/back_image_trailer"
                android:layout_marginLeft="10dp"
        />
            <TextView
                android:id="@id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_trailer"
                android:layout_toRightOf="@id/image_trailer"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/BACK"
                android:textSize="15dp"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:srcCompat="@mipmap/star"
                android:layout_toRightOf="@id/rating"
                android:layout_below="@id/text_trailer"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="4dp"/>

        </RelativeLayout>




    </android.support.v7.widget.CardView>

</RelativeLayout>