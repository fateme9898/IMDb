<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="385dp">

                <com.google.android.youtube.player.YouTubePlayerView
                    android:id="@+id/youtube_tv"
                    android:layout_width="match_parent"
                    android:layout_height="382dp">


                </com.google.android.youtube.player.YouTubePlayerView>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/information"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_below="@+id/tv">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/gray"
                    android:paddingLeft="7dp"
                    android:paddingTop="13dp"
                    android:text=" INFORMATION"
                    android:textColor="@color/orange"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="373dp" />
            </RelativeLayout>


            <ImageView
                android:id="@+id/image_info_tvdetail"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_below="@id/information"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape"
                android:paddingBottom="2dp"
                android:paddingTop="2dp" />

            <TextView
                android:id="@+id/title_info_tvdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/information"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:paddingRight="8dp" />

            <TextView
                android:id="@+id/text_info_tvdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/information"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="62dp"
                android:textColor="@color/colorGreyLight"
                android:paddingRight="8dp" />

            <RelativeLayout
                android:id="@+id/relate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_info_tvdetail"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/moviecredit"
                android:paddingBottom="3dp"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/similar_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="Similar Tv"
                    android:textColor="@color/orange"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/similar_tv_recycler"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@+id/relate"
                android:layout_marginTop="5dp"

                />


        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>