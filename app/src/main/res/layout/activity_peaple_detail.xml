<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!--<include-->

            <!--layout="@layout/toolbar2" />-->

            <RelativeLayout
                android:id="@+id/relate"
                android:layout_width="match_parent"
                android:layout_height="550dp">


                <ImageView
                    android:id="@+id/image_info_peopledetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="480dp"
                android:background="@drawable/detailperson"
                >


                <TextView
                    android:id="@+id/text_info_peopledetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/orange"
                    android:textSize="15dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/place_info_peopledetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_info_peopledetail"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="15dp"
                    />
                <TextView
                    android:id="@+id/birth_info_peopledetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_below="@id/place_info_peopledetail"
                    android:textColor="@color/colorWhite"
                    android:textSize="15dp"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See More "
                    android:layout_below="@id/place_info_peopledetail"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="6dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/orange"
               />

            </RelativeLayout>

            <com.github.chuross.library.ExpandableLayout
                android:id="@+id/expandableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/button"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/detailperson2">


                <TextView
                    android:id="@+id/overview_info_peopledetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:paddingRight="10dp"
                    android:textColor="@color/colorGreyLight"
android:paddingTop="10dp"
                    android:textSize="15dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    />


            </com.github.chuross.library.ExpandableLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/expandableLayout"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/moviecredit"
                android:paddingBottom="3dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/movie_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="Movie Credits"
                    android:textColor="@color/orange"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <android.support.v7.widget.RecyclerView

                    android:id="@+id/recyclerview_credit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/movie_credit"
                    android:layout_marginTop="10dp">


                </android.support.v7.widget.RecyclerView>

            </RelativeLayout>


        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
