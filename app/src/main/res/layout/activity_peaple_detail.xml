<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <include

                layout="@layout/toolbar2" />

            <RelativeLayout
                android:id="@+id/relate"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginTop="70dp">

                <ImageView
                    android:id="@+id/image_info_peopledetail"
                    android:layout_width="135dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape2"
                    android:paddingLeft="3dp"
                    android:paddingTop="3dp"
                    android:paddingRight="3dp"
                    android:paddingBottom="3dp"/>

                <TextView
                    android:id="@+id/text_info_peopledetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="165dp"
                    android:layout_marginTop="90dp"

                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/birth_info_peopledetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="165dp"
                    android:layout_marginTop="110dp"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/place_info_peopledetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="165dp"
                    android:layout_marginTop="130dp"
                    android:textColor="@color/colorWhite" />
            </RelativeLayout>


            <TextView
                android:id="@+id/overview_info_peopledetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relate"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorGreyLight"
                android:paddingRight="8dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/overview_info_peopledetail"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/moviecredit"
                android:paddingTop="3dp"
                android:paddingBottom="3dp" >
                <TextView
                    android:id="@+id/movie_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Movie Credits"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="12dp"/>

                <android.support.v7.widget.RecyclerView

                    android:id="@+id/recyclerview_credit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/movie_credit"
                    android:layout_marginTop="10dp" >


                </android.support.v7.widget.RecyclerView>

            </RelativeLayout>


        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
