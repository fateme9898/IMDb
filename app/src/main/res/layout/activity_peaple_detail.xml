<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!--<include-->

                <!--layout="@layout/toolbar2" />-->

            <RelativeLayout
                android:id="@+id/relate"
                android:layout_width="match_parent"
                android:layout_height="370dp"
             >


                <ImageView
                    android:id="@+id/image_info_peopledetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

         />
                <ImageView
                    android:id="@+id/back2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/back2"

                    android:background="@color/black"/>

            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="320dp"
                android:background="@drawable/forpeopledetail"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">
                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                <TextView
                    android:id="@+id/text_info_peopledetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/birth_info_peopledetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                android:layout_toRightOf="@id/text_info_peopledetail"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="15dp"
                  />

                <TextView
                    android:id="@+id/place_info_peopledetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:layout_below="@id/text_info_peopledetail"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:textStyle="bold"/>
        

            <TextView
                android:id="@+id/overview_info_peopledetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGreyLight"
                android:paddingRight="4dp"
                android:layout_below="@id/place_info_peopledetail"
                android:layout_marginLeft="10dp"

                android:textSize="15dp"/>
                    </RelativeLayout>
                </android.support.v4.widget.NestedScrollView>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/moviecredit"
                android:paddingTop="10dp"
                android:paddingBottom="3dp" >
                <TextView
                    android:id="@+id/movie_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Movie Credits"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="12dp"/>

                <android.support.v7.widget.RecyclerView

                    android:id="@+id/recyclerview_credit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/movie_credit"
                    android:layout_marginTop="10dp" >


                </android.support.v7.widget.RecyclerView>

            </RelativeLayout>


        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
