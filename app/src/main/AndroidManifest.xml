        </activity>
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.Search" />
        <activity android:name=".activity.Trailer_page" />
        <activity android:name=".activity.MovieDetail" />
        <activity android:name=".activity.TvDetail" />
