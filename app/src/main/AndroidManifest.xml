        <activity
            android:name=".Navigation_Tv.NavigationTv"
            android:label="@string/title_activity_navigation_tv" />
        <activity android:name=".Navigation_Movie.TopMovieDetail" />
        <activity android:name=".Navigation_Movie.PopMovieDetail" />
